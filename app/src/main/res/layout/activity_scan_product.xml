<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanProduct"
    android:background="@drawable/main_background_transparent">

    <TextView
        android:id="@+id/text_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Aby ropocząć skanowanie, zrób nowe zdjęcie lub wybierz z albumu!"
        android:textColor="@color/black"
        android:layout_margin="30dp"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/linear_holder"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/take_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Zrób zdjęcie"
            android:background="@color/purple_200"
            android:gravity="center"
            android:layout_margin="8dp"/>
        <Button
            android:visibility="gone"
            android:id="@+id/copy_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Skopiuj tekst"
            android:background="@drawable/round_shape_button"
            android:layout_margin="8dp"/>
    </LinearLayout>

</RelativeLayout>